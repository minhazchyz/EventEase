<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ViewBooking">

    <!-- Page Title -->
    <TextView
        android:id="@+id/tvBookingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Bookings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="16dp" />

    <!-- Scrollable List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvBookingsTitle"
        android:layout_above="@id/bottom_navigation"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Example Booking Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="12dp"
                android:elevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Package Image -->
                    <ImageView
                        android:id="@+id/bookingImage"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/weddding"
                        android:layout_marginBottom="8dp" />

                    <!-- Package Name -->
                    <TextView
                        android:id="@+id/bookingPackageName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Classic Wedding"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <!-- Booking Details -->
                    <TextView
                        android:id="@+id/bookingDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date: 25 Dec 2025"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/bookingGuests"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Guests: 100"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/bookingLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location: Dhaka, Bangladesh"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/bookingPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price: $1500"
                        android:textColor="@color/purple"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- You can duplicate this card for more bookings dynamically in RecyclerView or manually -->

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/purple"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@drawable/bottom_nav_menu"
        />

</RelativeLayout>